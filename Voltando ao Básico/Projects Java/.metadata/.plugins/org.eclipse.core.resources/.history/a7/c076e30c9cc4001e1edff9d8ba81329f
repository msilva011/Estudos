package exercicios01;

import java.util.Scanner;

public class Metro_Cent {

	public static void main(String[] args) {

		Scanner scan = new Scanner(System.in);
		
		System.out.println("Passe o valor em centimetros: ");
		double cent = scan.nextDouble();
		
		double metros = cent/100;
		
		System.out.println("O valor " + cent + "em centimetros, Ã© igual a " + metros + "metros");
		
	}

}
